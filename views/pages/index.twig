{# child.html.twig #}
{% extends "base.html.twig" %}

{% block title %}WebDev HQ &middot; API-Service{% endblock %}
{% if not user %}
	{% block content %}
		{% include '../partials/welcome.block.twig' %}
	{% endblock %}
{% else %}
	{% block content %}
	<div class="p-2 bg-white/30 backdrop-blur rounded mx-3 sm:mx-0">
		<div class="bg-white p-4 rounded">
			<div class="flex justify-between gap-6">
				{% block sidebar %}
					{% include 'partials/sidebar.twig' with { apps } %}
				{% endblock %}
				<section class="flex-1 px-4 py-2 min-h-[500px]">
					<h2 class="text-xl font-medium text-slate-800 mb-6">Welcome, {{ user.username }}</h2>
					<div class="flex flex-row gap-4 justify-start">
						{% for navLink in navLinks %}
							{% include 'partials/link-card.twig' %}
						{% endfor %}
					</div>
				</section>
			</div>
		</div>
	</div>
	{% endblock %}
{% endif %}