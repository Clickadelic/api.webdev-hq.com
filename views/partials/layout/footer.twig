<footer class="w-full z-10">
	{% block credits %}
	<div class="w-full bg-slate-800 border-t-2 border-mantis-primary py-6 px-3 sm:px-0">
		<div class="container mx-auto">
			<ul class="flex flex-col justify-center items-center space-y-4 md:flex-row md:space-x-3 md:space-y-0">
				{% set navLinks = lawLinks %}
				{% for navLink in navLinks %}
					<li>
						<a href="{{ navLink.url }}"  class="text-slate-100 hover:text-slate-200" target="_self">
							{{ navLink.title }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>
		<div class="container mx-auto">
			<p class="text-center text-sm mt-3 text-white"><a href="https://webdev-hq.com/" class="text-white hover:text-slate-200" target="_blank">WebDev HQ</a> &middot; {{ "now"|date("Y") }}.</p>
		</div>
	</div>
	{% endblock %}
</footer>