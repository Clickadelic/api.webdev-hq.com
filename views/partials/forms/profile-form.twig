
<form class="space-y-3" method="POST" action="/common/v1/users/">
	<input type="text" name="id" class="w-full bg-slate-200 rounded-sm p-3" hidden value="{{ user.id }}">
	<input type="text" name="name" autocomplete="username" class="w-full bg-slate-200 rounded-sm p-3" placeholder="Username" value="{{ user.username }}">
	<input type="email" name="email" autocomplete="email" class="w-full bg-slate-200 rounded-sm p-3" placeholder="E-mail" value="{{ user.email }}">
	<textarea name="bio" rows="3" class="w-full bg-slate-200 rounded-sm p-3" placeholder="Bio" value="{{ user.bio }}"></textarea>
	<button type="submit" class="w-full flex justify-center items-center gap-2 p-3 text-white bg-mantis-primary hover:bg-mantis-primary-hover rounded-sm hover:cursor-pointer">
		<span>
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
				<path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
			</svg>
		</span>
		<span>Update account</span>
	</button>
</form>