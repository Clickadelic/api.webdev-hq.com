<form class="space-y-3" method="POST" action="/common/v1/posts" id="post-form">
	<div class="md:flex md:flex-row md:flex-start md:justify-start md:items-center md:gap-2">
		<input type="text" name="title" class="w-full bg-slate-200 rounded-sm p-3" placeholder="Title">
		<select name="post-status" class="w-56 bg-slate-200 rounded-sm p-3">
			<option value="DRAFT">Draft</option>
			<option value="PUBLISHED">Published</option>
		</select>
	</div>
	<input type="text" name="slug" class="w-full bg-slate-200 rounded-sm p-3" placeholder="the-post-slug">
	<textarea name="description" rows="3" class="w-full bg-slate-200 rounded-sm p-3" placeholder="Description"></textarea>
	<textarea name="content" rows="10" class="w-full bg-slate-200 rounded-sm p-3" placeholder="Once upon a time..."></textarea>
    

