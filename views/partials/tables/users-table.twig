<div class="overflow-x-auto">
    <table class="min-w-full dark:divide-gray-700">
        <thead>
            <tr>
                <th scope="col" class="px-3 py-1 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                    Username
                </th>
                <th scope="col" class="px-3 py-1 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                    E-mail
                </th>
                <th scope="col" class="px-3 py-1 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                    Verified
                </th>
                <th scope="col" class="px-3 py-1 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                    Registrationdate
                </th>
                <th scope="col" class="px-3 py-1 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                    Rolle
                </th>
                <th scope="col" class="px-3 py-1 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 space-y-2">
            {% for user in users %}
                <tr class="hover:bg-slate-50 hover:cursor-default transition" id="user-{{ user.id }}">
                    <td class="px-3 py-1 whitespace-nowrap text-sm font-medium ">
                        {{ user.username }}
                    </td>
                    <td class="px-3 py-1 whitespace-nowrap text-sm font-medium ">
                        {{ user.email }}
                    </td>
                    <td class="px-3 py-1 whitespace-nowrap text-sm font-medium ">
                        {% if user.emailVerified %}
                        <span class="text-emerald-500">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                            </svg>
                        </span>
                        {% else %}
                            <span class="text-rose-500">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield-lock" viewBox="0 0 16 16">
                                    <path d="M5.338 1.59a61 61 0 0 0-2.837.856.48.48 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.7 10.7 0 0 0 2.287 2.233c.346.244.652.42.893.533q.18.085.293.118a1 1 0 0 0 .101.025 1 1 0 0 0 .1-.025q.114-.034.294-.118c.24-.113.547-.29.893-.533a10.7 10.7 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.8 11.8 0 0 1-2.517 2.453 7 7 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7 7 0 0 1-1.048-.625 11.8 11.8 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 63 63 0 0 1 5.072.56"/>
                                    <path d="M9.5 6.5a1.5 1.5 0 0 1-1 1.415l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99a1.5 1.5 0 1 1 2-1.415"/>
                                </svg>
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-3 py-1 whitespace-nowrap text-sm font-medium ">
                        {{ user.createdAt|date("d.m.Y") }}
                    </td>
                    <td class="px-3 py-1 whitespace-nowrap text-sm font-medium ">
                        <select id="user-role-select" class="user-role-select" data-user-id="{{ user.id }}" name="role">
                            {% if user.role == "ADMIN" %}
                                <option value="ADMIN" selected>Admin</option>
                                <option value="USER">User</option>
                            {% else %}
                                <option value="ADMIN">Admin</option>
                                <option value="USER" selected>User</option>
                            {% endif %}

                        </select>
                    </td>
                    <td class="px-3 py-1 whitespace-nowrap text-sm font-medium ">
                        <button class="delete-user-btn rounded p-2 text-rose-400 hover:cursor-pointer" data-user-id="{{ user.id }}" title="Delete">
                            <!-- Trash-Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                            </svg>
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr class="hover:bg-slate-50 hover:cursor-default transition">
                    <td colspan="4" class="text-center px-3 py-5 whitespace-nowrap text-sm font-medium">
                        <p class="text-gray-600 dark:text-gray-600">No users found in the database.</p>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>