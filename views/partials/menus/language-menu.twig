<nav class="flex items-start">
	<ul>
		<li>
			<!-- Dropdown Tailwind 4.1 https://tailwindcss.com/plus/ui-blocks/application-ui/elements/dropdowns -->
			<div class="relative inline-block text-left">
				<div>
					<button type="button" class="uppercase dropdown-btn inline-flex w-full justify-center gap-x-1.5 rounded-sm bg-white px-3 py-2 text-sm font-semibold text-slate-800 hover:bg-slate-200 hover:cursor-pointer" aria-expanded="false" aria-haspopup="true">
						<img src="{{ asset('assets/flags/' ~ (lang ?? 'en') ~ '.png') }}" width="20" height="10" alt="Flag" />
						{{ lang }}
						<svg class="-mr-1 size-5 text-slate-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
							<path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
						</svg>
					</button>
				</div>
				<div class="dropdown-menu absolute right-0 z-10 mt-2 w-32 origin-top-right divide-y divide-slate-100 rounded-sm bg-white shadow-lg ring-1 ring-black/5 focus:outline-none hidden" role="menu" aria-expanded="false" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
					<div class="py-1" role="none">
						{% set languages = [
							{ code: 'de', label: 'german', flag: 'de.png' },
							{ code: 'en', label: 'english', flag: 'en.png' }
						] %}

						{% for l in languages %}
						<a href="/{{ l.code }}{{ pathWithoutLang }}" 
						class="flex space-x-2 px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 {% if lang == l.code %}text-mantis-primary{% endif %}" 
						role="menuitem" tabindex="-1">
							<span>
								<img src="{{ asset('assets/flags/' ~ l.flag) }}" class="mt-[5px]" alt="{{ l.label | capitalize }} Flag" />
							</span>
							<span class="capitalize">{{ t(l.label) }}</span>
						</a>
						{% endfor %}
					</div>
				</div>
			</div>
		</li>
	</ul>
</nav>
