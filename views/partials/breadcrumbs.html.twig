{% if pathSegments|length > 0 %}
    <div class="container mx-auto border-b border-slate-200">
        <nav class="py-4 px-3 sm:px-0">
			<ul class="flex justify-start text-xs space-x-3">
				<li>
					<a href="/" class="hover:text-mantis-primary">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="inline-block -mt-1 mr-2 bi bi-house" viewBox="0 0 16 16">
							<path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
						</svg>
						Home
					</a>
				</li>
				{% set url = '' %}
				{% for segment in pathSegments %}
					{% set url = url ~ '/' ~ segment %}
					<li class="text-slate-800">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mt-.5 bi bi-arrow-right" viewBox="0 0 16 16">
							<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
						</svg>
					</li>
					<li>
						{% if not loop.last %}
							<a href="{{ url }}" class="text-blue-500 hover:underline">{{ segment|capitalize }}</a>
						{% else %}
							<span class="text-gray-700">{{ segment|capitalize }}</span>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
        </nav>
    </div>
{% endif %}
